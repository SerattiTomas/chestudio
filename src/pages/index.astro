---
import Cta from "@components/cta.astro";
import Features from "@components/features.astro";
import Hero from "@components/hero.astro";
import Novedades from "@components/novedades.astro";
import About from "@components/about.astro";
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/navbar/navbar.astro";
---
<style>
  .main-container {
    background: linear-gradient(180deg, #002d4255, #002d42),
      url("https://images.unsplash.com/photo-1553877522-43269d4ea984?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
    border-bottom-right-radius: min(50vw, 25rem);
    padding-top: 2rem;
    padding-bottom: 5rem;
    background-position: top center;
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>

<Layout title="">
  <div class="main-container">
    <Navbar />
    <Hero />
  </div>
  <About />
  <Features />
  <Novedades />
  <Cta />
</Layout>
